{
  "name": "rapart-hono-server",
  "version": "1.0.0",
  "description": "MobSF API Server with Bun + Hono + MongoDB + Nginx",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot server.ts",
    "start": "bun run server.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose up -d --build"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@types/bun": "latest"
  }
}